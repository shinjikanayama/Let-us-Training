<!--エラーメッセージ-->
<% if flash[:alert].present? %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with model: @user do |f| %>

<div class="container" style="margin-top: 40px;">
  <div class="row justify-content-center">

    <div class="col-md-9">

        <div class="form-group row">
          <div class="col-md-4">
            <% if @user.profile_image.present? %>
              <%= image_tag @user.profile_image, class: "rounded-circle profile-image", width: "150", height: "150" %>
            <% else %>
              <%= image_tag 'no_image.jpg', class: "rounded-circle profile-image", width: "150", height: "150" %>
            <% end %>
            </div>
          <div class="col-md-8">
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
        </div>



      　<div class="form-group row">
          <div class="col-md-4">
            <%= f.label :（ユーザーネーム）, class: "col-form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
　　　　</div>

        <div class="form-group row">
          <div class="col-md-5">
            <%= f.label :（目標）, class: "col-form-label" %>
            <%= f.text_area :goal, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-7 text-right">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </div>
        </div>

    </div>
  </div>
</div>

<% end %>

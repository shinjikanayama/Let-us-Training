
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>記録を入力</h2>

  　　　<%= form_with(model: @post, local: true) do |f| %>
        <div class="time">
          <%= f.label :時間 %>
          <%= f.datetime_select :start_time %>
        </div>

        <div class="name">
          <%= f.label :ジャンル %>
          <%= f.collection_select :genre_id, current_user.genres, :id, :name, include_blank: "-- 選択してください --" %>
        </div>

        <div class="body">
          <%= f.label :内容 %>
          <%= f.text_area :body, class: "form-control" %>
        </div>


        <div class="image">
          <%= f.label :画像 %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="actions">
          <%= f.submit "記録する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
